<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!--Seedang diedit-->
    <!--2 master-->
    <!--1-->

    <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/btn_document"
                android:layout_gravity="center"
                android:text="Open File"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_video"
                android:layout_gravity="center"
                android:text="Open Video"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_photo"
                android:layout_gravity="center"
                android:text="Open Photo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_checksum"
                android:layout_gravity="center"
                android:text="File Checksum"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_istring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="File input string: "/>

        <TextView
                android:id="@+id/tv_ostring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="File output string: "/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>